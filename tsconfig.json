{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames":true,
    "module": "NodeNext",
    "target": "es6",
    "lib": ["es6", "DOM"],
    "sourceMap": true,
    "outDir": "./dist" ,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
